@@ -2350,6 +2350,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, ne
 
     }
 
+    public final int getMaxAirTicks() { return bH(); } // Paper - OBFHELPER
     public int bH() {
         return 300;
     }
